@page
@model Website.Pages.CartModel
@{
    ViewData["Title"] = "Cart";
}

<div class="allpage">
    <h1 class="display-4">Cart</h1>
    @{
        if(Model.Cart != null)
        {
            foreach (var basket in Model.Cart.Baskets)
            {
                await Html.RenderPartialAsync("BasketView", new BasketViewModel(Model.UserManager, basket));
            }
            if(Model.Cart.Baskets.Count == 0)
            {
                <h2>Your Cart is Empty!</h2>
            }
        }
    }
    <text class="alert-danger">@Model.ErrorMsg</text>
</div>