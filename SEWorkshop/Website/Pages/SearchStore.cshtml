@page
@model Website.Pages.SearchStoreModel

@{
    ViewData["Title"] = "Search Store";
}

    <div class="allpage">
        <h1 class="display-4">Search Store</h1>
        <form class="loginform" asp-page="SearchStore" method="post">
            <input class="input" type="text" asp-for="StoreName" placeholder="StoreName" />
            <button class="submit" type="submit" id="submit">Search Store</button>
            <text class="alert-danger">@Model.ErrorMsg</text>
        </form>
    </div>